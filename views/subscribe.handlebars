<div class="container body-content">
    <section class="content-wrapper main-content clear-fix">
	<div class="row">
		<div class="col-md-12">
			<h1>Subscribe to {{websiteName}}</h1>
		</div>
		<div class="col-md-12">
			<form method="post" action="./new">
			<input type="hidden" name="resource" value="{{websiteName}}">
			<div class="form-group"><div class="col-sm-12"><input type="text" id="email" name="email" label="User Email" class="polymerform" value="{{ email }}" /></div></div>
			<div class="form-group"><div class="col-sm-12"><input type="submit" class="wavesbutton" value="Subscribe" /></div></div>
			<!-- <div class="form-group"><div class="col-sm-12"><a href="#" class="wavesbutton">Click Here</a></div></div> -->
			</form>
			<div class="col-sm-12"><div class="text-danger validation-summary-errors">{{ emailMessage }}</div></div>
			<div class="col-sm-12"><div class="text-danger validation-summary-errors">{{ subscribeStatus }}</div></div>
		</div>
	</div>
	</section>
</div>

<footer class="footer">
  <div class="container">
	<span class="text-muted">&copy; Breve.me 2018 <a href="about?caller=subscribe">Smallest Chat App?</a></span>
  </div>
</footer>

<script type="text/javascript" src="/breve/bower_components/Waves/dist/waves.min.js"></script>
<script type="text/javascript" src="/breve/static/polymerform/build/jquery.polymer-form.min.js"></script>
<script type="text/javascript">
//init the wave button
Waves.attach('.wavesbutton', ['waves-button', 'waves-float']);
Waves.init();
//init the polymerForm
$(document).ready(function(){
	$(".polymerform").polymerForm();
});
</script>