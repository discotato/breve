<div class="container body-content">
    <section class="content-wrapper main-content clear-fix">
	<div class="row">
		<div class="col-md-12">
			<h1>Talk to someone</h1>
		</div>
		<div class="col-md-12">
			<form method="post" action="./room">
			<div class="form-group"><div class="col-sm-12"><div class="input-group"><label for="email">User Email</label><input type="text" id="email" name="email" label="User Email" value="{{ email }}" /></div></div></div>
			<div class="form-group"><div class="col-sm-12"><input type="submit" class="wavesbutton" value="Start Chat" /></div></div>
			<!-- <div class="form-group"><div class="col-sm-12"><a href="#" class="wavesbutton">Click Here</a></div></div> -->
			</form>
			<div class="col-sm-12"><div class="text-danger validation-summary-errors">{{ emailMessage }}</div></div>
			<div class="col-sm-12"><div class="text-danger validation-summary-errors">{{ userStatus }}</div></div>
		</div>
		<div class="col-md-12">
			<h1><a href="./remotehost">Select</a> Someone</h1>
		</div>
	</div>
	</section>
</div>

<script type="text/javascript" src="/breve/bower_components/Waves/dist/waves.min.js"></script>
<script type="text/javascript" src="/breve/static/polymerform/build/jquery.polymer-form.min.js"></script>
<script type="text/javascript">
//init the wave button
Waves.attach('.wavesbutton', ['waves-button', 'waves-float']);
Waves.init();
//init the polymerForm
$(document).ready(function(){
	$(".polymerform").polymerForm();
});
</script>