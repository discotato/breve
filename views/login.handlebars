<div class="container body-content">
    <section class="content-wrapper main-content clear-fix">
	<div class="row">
		<div class="col-md-12">
			<h1>Login</h1>
		</div>
		<div>&nbsp;</div>
		<div class="col-md-12">
		<form method="post" action="./login">
			<div class="form-group"><div class="col-sm-12"><div class="input-group"><label for="email">Email</label><input type="text" id="email" name="email" label="Email" value="{{ email }}" /></div></div></div>
			<!-- <div class="form-group"><div class="col-sm-12"><div class="input-group"><input type="password" id="password" name="password" label="Password" class="polymerform" /></div></div></div> -->
			<div class="form-group"><div class="col-sm-12"><div class="input-group"><label for="password">Password</label><input type="password" id="password" name="password" label="Password" /></div></div></div>
			<div class="form-group"><div class="col-sm-12"><!--<input type="submit" value="Login" class="wavesbutton" />--><button class="btn waves-effect waves-light" type="submit" name="action">Login</button></div></div>
			<!-- <div class="form-group"><div class="col-sm-12"><a href="#" class="wavesbutton">Click Here</a></div></div> -->
			
			<div class="col-sm-12"><div class="text-danger validation-summary-errors">{{ loginMessage }}</div></div>
			<div class="col-sm-12"><div class="text-danger validation-summary-errors">{{ userStatus }}</div></div>
		</form>
		</div>
		<div class="col-md-12">
			<h1>No Account? <a href="register">Register</a></h1>
		</div>
	</div>
	</section>
</div>

